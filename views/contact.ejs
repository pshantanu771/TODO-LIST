<%- include("./beforeLogIn/header.ejs")  %> 

<div class="alert alert-success alert-dismissible fade show showAlert" role="alert">
    <strong> <i class="fas fa-check-circle"></i> Query submitted successfully. </strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<form action="/contact" method="post" class="contactForm" id="#myform">
    <div class="contactContainer">
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Name</label>
        <input type="text" name="contactName" class="form-control" id="exampleFormControlInput1" autocomplete="off" required>
        <label for="exampleFormControlInput1" class="form-label">Email</label>
        <input type="email" name="contactEmail" class="form-control" id="exampleFormControlInput1" autocomplete="off" required>
    </div>
    <div class="mb-3 form-group">
        <label for="exampleFormControlTextarea1" class="form-label">Query</label>
        <textarea class="form-control" name="contactQuery" id="exampleFormControlTextarea1" rows="5" autocomplete="off" required></textarea>
    </div>
    <button type="submit" name="button" class="contactBtn btn-lg btn-primary">Submit</button>
</div>
</form>
<%- include("./beforeLogIn/footer.ejs")  %> 